<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AcePlusCodeTest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_grey</item>
        <item name="colorSecondaryVariant">@color/background_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="MyCardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardBackgroundColor">@color/backgroundLight</item>
    </style>

    <style name="TopBarStyle" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">

        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
</resources>